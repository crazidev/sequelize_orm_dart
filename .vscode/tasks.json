{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch Dart Server",
      "type": "shell",
      "command": "./tools/watch_dart.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (error|warning): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Watching for file changes",
          "endsPattern": "^.*Dart server started"
        }
      }
    },

    {
      "label": "Watch JS Server",
      "dependsOn": ["Watch Models", "Watch JS"],
      "dependsOrder": "parallel",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "JS  Server",
      "type": "shell",
      "command": "node --watch example/build/index.js",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Restarting",
          "endsPattern": "."
        }
      }
    },
    {
      "label": "Watch JS",
      "type": "shell",
      "command": "./tools/watch_js.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "line": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[.*\\] Running initial build",
          "endsPattern": "^\\[.*\\] Ready"
        }
      }
    },

    {
      "label": "Watch Models",
      "type": "shell",
      "command": "dart run build_runner watch --delete-conflicting-outputs",
      "options": {
        "cwd": "${workspaceFolder}/example"
      },
      "isBackground": true,
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (error|warning): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[INFO\\] Generating build script",
          "endsPattern": "^\\[INFO\\] Succeeded after"
        }
      }
    },
    {
      "label": "Build Bridge Server",
      "type": "shell",
      "command": "./tools/setup_bridge.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
