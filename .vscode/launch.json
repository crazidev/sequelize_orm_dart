{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Dart Server",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/example/lib/main.dart",
      "cwd": "${workspaceFolder}/example",
      "vmAdditionalArgs": ["--enable-asserts"],
      "console": "debugConsole"
    },
    {
      "name": "Debug Node.js (dart2js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/example/build/index.js",
      "cwd": "${workspaceFolder}/example",
      "sourceMaps": true,
      "preLaunchTask": "Build: dart2js",
      "outFiles": ["${workspaceFolder}/example/build/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "cwd": "${workspaceFolder}",
      "console": "debugConsole",
      "name": "Dart: Run all Tests",
      "type": "dart",
      "request": "launch",
      "program": "./test/"
    },
    {
      "cwd": "${workspaceFolder}",
      "console": "debugConsole",
      "name": "Dart: Run Test",
      "type": "dart",
      "request": "launch",
      "program": "./test/"
    }
  ]
}
