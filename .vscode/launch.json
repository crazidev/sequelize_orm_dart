{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Dart Server (with File Watcher)",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/example/lib/main.dart",
      "cwd": "${workspaceFolder}/example",
      "preLaunchTask": "Start File Watcher",
      "vmAdditionalArgs": ["--enable-asserts"],
      "console": "debugConsole"
    },
    {
      "name": "Debug Dart Server",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/example/lib/main.dart",
      "cwd": "${workspaceFolder}/example",
      "vmAdditionalArgs": ["--enable-asserts"],
      "console": "debugConsole"
    },
    {
      "name": "Debug Node.js (dart2js)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/example/build/index.js",
      "cwd": "${workspaceFolder}/example",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/example/build/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Run Tests",
      "type": "dart",
      "request": "launch",
      "program": "${workspaceFolder}/example/.dart_tool/test.dart",
      "cwd": "${workspaceFolder}/example",
      "console": "debugConsole"
    }
  ]
}
